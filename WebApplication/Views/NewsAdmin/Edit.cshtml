@using WebApplication.Core.Domains
@model News

@{
    ViewData["Title"] = "Edit News";
}
<script src="~/ckeditor/ckeditor.js"></script>


<div class="panel mb25">
    <header class="panel-heading" style="margin-bottom: 30px;">Edit</header>

    <div class="panel-body">
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="m-0 p-t-30">
                <form asp-action="Edit" class="form-horizontal bordered-group" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />



                    <div class="form-group">
                        <label asp-for="Title" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger" />
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Body" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Body" id="editor1" name="editor1"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageUrl" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input type="file" asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>

<script type="text/javascript">CKEDITOR.replace('editor1');</script>


@section Breadcrumbs {
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li>
            <a asp-controller="News" asp-action="Index">News </a>
        </li>
        <li class="active">
            <a href="javascript:;">Edit</a>
        </li>
    </ol>
}

