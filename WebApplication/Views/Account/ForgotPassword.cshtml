@using WebApplication.Infrastructure.ViewModels.AccountViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<section id="stock_login">
<div class="page-auth text-center p-35" style="background: white">
    <div class="login-box center-block">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal ">
            <h4>Enter your email to get  reset passwrod link.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-12">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-custom-primary btn-block">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>


</section>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}