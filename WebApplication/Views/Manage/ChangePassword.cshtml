@using WebApplication.Infrastructure.ViewModels.ManageViewModels
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}


<div class="panel mb25 center-block">
    <h3><i class="fa fa-square"></i> Change Password</h3>
    <div class="panel-body">
        <div class="row no-margin">
            <div class="col-lg-12">
                <form asp-action="ChangePassword" method="post" class="form-horizontal bordered-group" role="form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="col-sm-3 control-label ">Old Password</label>
                        <div class="col-sm-4">
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label asp-for="NewPassword" class="col-sm-3 control-label ">New Password</label>
                        <div class="col-sm-4">
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="col-sm-3 control-label">Confirm Password</label>
                        <div class="col-sm-4">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3"></label>
                        <div class="col-sm-4">
                            <button type="submit" class="btn btn-primary"> Change Password</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
