@using WebApplication.Infrastructure.ViewModels
@model RoleViewModel
@{
    ViewData["Title"] = "Edit Role";

}


<div class="panel">
    <header class="panel-heading" style="margin-bottom: 30px;">Edit Role</header>
    <div class="panel-body">
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="m-0 p-t-30">
                 <form asp-action="Edit" class="form-horizontal bordered-group" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ConcurrencyStamp" />
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control frmx100" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Update" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Breadcrumbs {
    <ul class="breadcrumb">
    <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
    <li><a asp-controller="Roles" asp-action="Index">Roles</a></li>                          
    <li class="active ng-binding"><a href="javascript:;">Edit</a></li>
</ul>
}
