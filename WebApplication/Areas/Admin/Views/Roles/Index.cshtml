@using WebApplication.Infrastructure.ViewModels

@model List<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
}



<div class="panel">
    <header class="panel-heading" style="margin-bottom: 30px;">Role <span class="pull-right">
            <a asp-action="Create">Create New</a>
        </span></header>
    <div class="panel-body">
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="m-0 p-t-30">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped text-center">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" data-toggle=tooltip data-placement=top title="Edit" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                            &nbsp;
                                            <a asp-action="Details" asp-route-id="@item.Id" data-toggle=tooltip data-placement=top title="Details" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                                            &nbsp;
                                            <a asp-action="Delete" asp-route-id="@item.Id" data-toggle=tooltip data-placement=top title="Delete" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Breadcrumbs {
    <ul class="breadcrumb">
    <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
    <li class="active ng-binding"><a href="javascript:;">Roles</a></li>
</ul>
}