@using WebApplication.Infrastructure.ViewModels
@model RoleViewModel
@{
    ViewData["Title"] = "Create Role";

}


<div class="panel">
    <header class="panel-heading" style="margin-bottom: 30px;">Create Role</header>
    <div class="panel-body">
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="m-0 p-t-30">
                <form asp-action="Create" class="form-horizontal bordered-group" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label text-right" style="text-align:right"></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>
                
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Breadcrumbs {
 <ul class="breadcrumb">
    <li><a asp-controller="Dashboard" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
    <li><a asp-controller="Roles" asp-action="Index">Roles</a></li>                          
    <li class="active ng-binding"><a href="javascript:;">Create</a></li>
</ul>
}
