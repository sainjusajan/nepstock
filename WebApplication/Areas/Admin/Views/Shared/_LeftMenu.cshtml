@using Microsoft.AspNetCore.Identity
@using WebApplication.Identity
@inject UserManager<IdentityUser> UserManager

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/images/system/user-160x160.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@UserManager.GetUserName(User)</p>
                <!-- Status -->
                <i class="fa fa-circle text-success"></i> Online
            </div>
        </div>
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">Navigation</li>
            <!-- Optionally, you can add icons to the links -->
            <li id="menu-dashboard"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fa fa-dashboard"></i><span>Dashboard</span></a></li>
            <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-tv"></i><span>Home</span></a></li>
            <li id="menu-catalog" class="treeview">
                <!-- catalog tree bar -->
                <a href="#">
                    <i class="fa fa-book"></i> <span>Admin</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a id="menu-admin-user" asp-controller="#" asp-action="List"><i class="fa fa-circle-o"></i><span>User</span></a></li>
                    <li><a id="menu-admin-role" asp-controller="#" asp-action="List"><i class="fa fa-circle-o"></i><span>Role</span></a></li>
                       </ul>
            </li>
            <!-- sales tree bar -->
            <li id="menu-sale" class="treeview">
                <a href="#">
                    <i class="fa fa-shopping-cart"></i> <span>Setting</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a id="menu-sale-orders" asp-controller="#" asp-action="List"><i class="fa fa-circle-o"></i><span>Privacy</span></a></li>
                </ul>
            </li>
        </ul>
        <!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
