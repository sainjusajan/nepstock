@using WebApplication.Core.Domains
@model News

@{
    ViewData["Title"] = "Details";
}

<div class="panel mb25">
    <header class="panel-heading" style="margin-bottom: 30px;">Details</header>


    
    <div class="panel-body">
        <div class="clearfix"></div>
        <div class="col-md-12">
            <div class="m-0 p-t-30">
                <dl class="dl-horizontal">

                    <dd>
                        @Html.DisplayFor(model => model.Id)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.Body)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.publishedDate)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.addedBy)
                    </dd>
                    <dd>
                        @Html.DisplayFor(model => model.ImageUrl)
                    </dd>

                </dl>
            </div>
            <div class="col-lg-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Dashboard" asp-action="Index">Home</a>
        </li>
        <li>
            <a asp-controller="News" asp-action="Index">News</a>
        </li>
        <li class="active">
            <a href="javascript:;">Details</a>
        </li>
    </ol>
}